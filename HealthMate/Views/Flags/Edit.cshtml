@model HealthMate.Models.Flags

@{
    ViewData["Title"] = "Edit";

}



<h1>Edit Flag</h1>
<h4>Provide notes for the selected flagged item</h4>
<hr />



<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlagId" />
            <input type="hidden" asp-for="FlagUserMatchData" />
            <input type="hidden" asp-for="FlagMealId" />
            <div class="form-group">
                <label asp-for="FlagMeal.MealName" class="control-label"></label>
                <input asp-for="FlagMeal.MealName" class="form-control" />
                <span asp-validation-for="FlagMeal.MealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlagNotes" class="control-label"></label>
                <input asp-for="FlagNotes" class="form-control" />
                <span asp-validation-for="FlagNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>